/* 防蚊点标记样式 */
.mosquito-point {
  position: relative;
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background-color: #F44336;
  border-radius: 50%;
  margin-right: 8rpx;
}

.mosquito-point::after {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #F44336;
  border-radius: 50%;
  left: -5rpx;
  top: -5rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

